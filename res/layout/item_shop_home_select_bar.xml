<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_shop_home_select_bar"
    android:layout_width="match_parent"
    android:layout_height="45.5dp"
    android:background="#e6e6e6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shop_home_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="店铺首页"
            android:textColor="@color/item_shop_home_select_bar_selector"
            android:textSize="12dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="25dp"
            android:background="#e6e6e6" />

        <TextView
            android:id="@+id/shop_home_promotion_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="促销"
            android:textColor="@color/item_shop_home_select_bar_selector"
            android:textSize="12dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="25dp"
            android:background="#e6e6e6" />

        <TextView
            android:id="@+id/shop_home_hot_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="热销"
            android:textColor="@color/item_shop_home_select_bar_selector"
            android:textSize="12dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="25dp"
            android:background="#e6e6e6" />

        <TextView
            android:id="@+id/shop_home_new_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="上新"
            android:textColor="@color/item_shop_home_select_bar_selector"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>