<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dip"
    android:background="#EA5413" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="2dp"
        android:background="@color/shoutuise" >

        <ImageView            android:id="@+id/search_back"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/search_scanf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:src="@drawable/icon_scan" />

        <LinearLayout
            android:id="@+id/search_top_linear_bar1"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/search_top_bar_background"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/search_bt1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/search_title_name1"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="商品"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_bottom" />
            </LinearLayout>

            <EditText
                android:id="@+id/search_edit1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="药品通用名，商品名"
                android:imeOptions="actionSearch"
                android:textColorHint="#cbcbcc"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/search_name_bt1"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/item_search_bt_background"
                android:gravity="center"
                android:text="搜索"
                android:textColor="#333333"
                android:textSize="13dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>