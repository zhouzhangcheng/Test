<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/st30fidst"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <include layout="@layout/top_menu_st303" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_Gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="不符合采购条件商品"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/red"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bufuhetiaojiantv303"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="符合采购条件商品"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/green"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fuhetiaojiantv303"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_Gray" />

    </LinearLayout>
<ExpandableListView
                android:id="@+id/expandableListView303"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:childDivider="#F3F3F3"
                android:layout_above="@+id/linebuy303"
                android:layout_below="@+id/st30fidst"
                android:divider="#F3F3F3"
                android:dividerHeight="0.5dp"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:longClickable="true"
                android:scrollingCache="false"
                android:visibility="visible" />
    <View
        android:id="@+id/linebuy303"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/jiesuan_lin303"
        android:background="@color/bg_Gray" />

    <LinearLayout
        android:id="@+id/jiesuan_lin303"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/jiesuan303"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/bg_White"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/st30goodfuhetv303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="符合采购条件商品 0"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/st303storefuhe303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:text="店铺 0"
                android:textColor="@color/gray"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hejijine303"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/bg_White"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/st303acount303"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/bg_White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/st303acounttv303"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="合计：￥0.00"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/st303youfei303"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@color/bg_White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/st303youfeitv303"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="邮费：￥0.00"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="fill_parent" >

            <Button
                android:id="@+id/st30buy303"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:background="@color/shoutuise"
                android:text="购买"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>