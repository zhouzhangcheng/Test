<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/callbottom"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <include layout="@layout/top_menu_st301" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/jiesuan_lin"
            android:background="@color/bg_Gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/waitbuyrl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/waitbuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审计划"
                        android:textColor="@color/bardefault"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/waitbuynumnobuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/waitbuy"
                        android:text="1"
                        android:textColor="@color/bardefault"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>
            
             <RelativeLayout
                android:id="@+id/nobuyrl2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/nobuy2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未采购"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/nobuynum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/nobuy2"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/nobuyrl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/nobuy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未匹配"
                        android:textColor="@color/bardefault"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/nobuynum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/nobuy"
                        android:text="1"
                        android:textColor="@color/bardefault"
                        android:textSize="16dp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>


       
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_Gray" />

        <RelativeLayout
            android:id="@+id/show_cart_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF" >

            <ExpandableListView
                android:id="@+id/expandableListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:childDivider="#F3F3F3"
                android:divider="#F3F3F3"
                android:dividerHeight="0.5dp"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:longClickable="true"
                android:scrollingCache="false"
                android:visibility="visible" />

        </RelativeLayout>
        
        <TextView 
            android:id="@+id/alladd"
            android:layout_width="match_parent"
            android:textColor="#ffffff"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginBottom="3dp"
            android:background="@color/holo_green_dark"
            android:text="全部加入计划"/>
        
    </LinearLayout>
	
    
   

</RelativeLayout>