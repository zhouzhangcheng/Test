<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rlredgood"
        android:layout_width="5dp"
        android:layout_height="103dp"
        android:background="@color/red"
        android:visibility="visible"
        android:orientation="vertical" >
    </RelativeLayout>
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rlredgood"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F3F3" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/st30rl1303"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_below="@+id/line1"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/st30img1"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/st30fill" />

            <TextView
                android:id="@+id/st30goodnobuy303"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/st30img1"
                android:singleLine="true"
                android:text="不满最低采购数量，最低采购数量为5"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/st30rl1303"
            android:background="#F3F3F3" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/st30goodinfo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/line2"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/gooddelete"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/gooddeleteimg303"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/del30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/gooddelete"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/st30goodname303"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="商品名称"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/st30guige303"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="商品规格"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/st30changjia303"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:singleLine="true"
                            android:text="生产厂家"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/st30xiaoqi303"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:text="效期2016-12-03"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/st30ll"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/zuidinum303"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="0dp"
                            android:text="最低采购5"
                            android:textColor="@color/gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/goodacount303"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="0dp"
                            android:text="￥6.01"
                            android:textColor="@color/indianred"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/st30ll"
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp" >

                        <ImageView
                            android:id="@+id/st30numreduce303"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/ic_reduce" />

                        <com.newgame.sdk.yyaost.ExtendedEditText
                            android:id="@+id/st30productnum303"
                            android:layout_width="70dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/numinput"
                            android:gravity="center_vertical|center_horizontal"
                            android:inputType="number"
                            android:focusable="false"
                            android:selectAllOnFocus="true"
                            android:singleLine="true"
                            android:textSize="12sp" >
                        </com.newgame.sdk.yyaost.ExtendedEditText>

                        <ImageView
                            android:id="@+id/st30numadd303"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="0dp"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/ic_add" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/st30goodinfo"
            android:background="#F3F3F3" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/st30hejirl303"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/line3"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/st30storeerror303"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="不满最低发货，还差￥32.00"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/st30storeyoufei303"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:singleLine="true"
                    android:text="邮费：￥6"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/st30storeheji303"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:singleLine="true"
                    android:text="合计：￥6.00"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>