<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/moneyinfotv302"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:text="sg"
                android:textColor="#7f7f7f"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/moneytv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:text="￥"
                    android:textColor="#7f7f7f"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/moneytv302"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="200.00"
                    android:textColor="#7f7f7f"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/moneytimetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="为您节省采购时间"
                android:textColor="#7f7f7f"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/timetv302"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="2"
                    android:textColor="#7f7f7f"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/timetv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:maxLines="2"
                    android:text="小时"
                    android:textColor="#7f7f7f"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/line2"
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="采购店铺"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/storenumtv302"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="2"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/line3"
        android:layout_below="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="邮费"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/youfeitv302"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:text="￥ 6"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/line4"
        android:layout_below="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line4"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="合计"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/hejitv302"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:text="￥ 12345.00"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/line5"
        android:layout_below="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line5"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="不符合采购条件商品"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/bufuhetv302"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:text="3"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/line6"
        android:layout_below="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line6"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/selecttv302"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="选择该方案"
            android:textColor="#7f7f7f"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>